<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textoDeporte"

    android:hapticFeedbackEnabled="true"
    tools:context="com.example.Dietapp.DeporteEjercicios.Cardio">

    <Spinner
        android:id="@+id/espi2"
        android:layout_width="298dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="240dp"
        android:layout_height="78dp"
        android:background="?attr/actionModeSplitBackground"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/dietapp"
        android:textColor="@color/dietappPrincipal"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="330dp"
        android:layout_height="29dp"
        android:layout_marginTop="12dp"
        android:background="@color/explica4"
        android:text="@string/indicarDeprorte"
        android:textColor="@color/textoEdit"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/minutos"
        app:layout_constraintStart_toStartOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/horas"
        tools:context="com.example.Dietapp.DeporteEjercicios.Deporte" />

    <EditText
        android:id="@+id/minutos"
        android:layout_width="72dp"
        android:layout_height="33dp"
        android:layout_marginStart="28dp"
        android:background="@color/ayuda"
        android:hint="@string/minutosdepor"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="5"
        android:textColor="@color/textoEdit"
        android:textColorHighlight="@color/colorHigt"
        app:layout_constraintBottom_toBottomOf="@+id/horas"
        app:layout_constraintStart_toEndOf="@+id/horas"
        app:layout_constraintTop_toTopOf="@+id/horas"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/horas"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:background="@color/ayuda"
        android:hint="@string/horasdepor"
        android:importantForAutofill="no"
        android:inputType="phone"
        android:maxLength="5"
        android:textColor="@color/textoEdit"
        android:textColorHighlight="@color/colorHigt"
        app:layout_constraintStart_toEndOf="@+id/textView10"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="171dp"
        android:layout_height="37dp"
        android:layout_marginTop="88dp"
        android:background="@color/explica4"
        android:text="@string/timepodeporte"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/textoEdit"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/boton_guardar"
        android:onClick="guardar"
        android:text="@string/guardar"
        android:textColor="@color/guuardar"
        app:layout_constraintEnd_toEndOf="@+id/textR"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="@+id/textR"
        app:layout_constraintTop_toBottomOf="@+id/textR" />

    <TextView
        android:id="@+id/textR"
        android:layout_width="360dp"
        android:layout_height="32dp"
        android:layout_marginTop="76dp"
        android:background="@color/textoeditDepo"
        app:layout_constraintEnd_toEndOf="@+id/espi2"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="@+id/espi2"
        app:layout_constraintTop_toBottomOf="@+id/espi2" />


</android.support.constraint.ConstraintLayout>
