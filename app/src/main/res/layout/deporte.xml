<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textoDeporte"

    android:hapticFeedbackEnabled="true"
    tools:context="com.example.Dietapp.DeporteEjercicios.Deporte">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="240dp"
        android:layout_height="78dp"
        android:background="?attr/actionModeSplitBackground"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/dietapp"
        android:textColor="@color/dietappPrincipal"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="186dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:background="@color/textoeditDepo"
        android:backgroundTintMode="src_in"
        android:contentDescription="@string/deporte"
        android:fontFamily="sans-serif-black"
        android:hapticFeedbackEnabled="?android:attr/windowOverscan"
        android:text="@string/deporte"
        android:textAlignment="center"
        android:textColor="@color/hora"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="274dp"
        android:layout_height="124dp"
        android:text="@string/animo"
        android:textAllCaps="true"
        android:textColor="@color/total"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32"
        app:layout_constraintVertical_bias="0.891" />

    <Button
        android:id="@+id/button5"
        android:layout_width="128dp"
        android:layout_height="57dp"
        android:layout_marginStart="120dp"
        android:background="@drawable/boton_volver"
        android:onClick="volverMenu"
        android:text="@string/volverCatego"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/textView32"
        app:layout_constraintVertical_bias="0.545" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/boton_guardar"
        android:onClick="enviarDatos"
        android:text="@string/guardar"
        android:textColor="@color/guuardar"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32"
        app:layout_constraintVertical_bias="0.201" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="167dp"
        android:layout_height="121dp"
        android:layout_marginStart="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cansao"
        android:contentDescription="@string/imagendepor"/>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="125dp"
        android:layout_height="117dp"
        android:layout_marginStart="304dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.993"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintStart_toStartOf="@+id/textView8"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        app:layout_constraintVertical_bias="0.814"
        app:srcCompat="@drawable/sofa"
        android:contentDescription="@string/imagen2depor"/>

    <TextView
        android:id="@+id/textR"
        android:layout_width="360dp"
        android:layout_height="32dp"
        android:layout_marginTop="156dp"
        android:background="@color/textoeditDepo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="306dp"
        android:layout_height="42dp"
        android:layout_marginTop="52dp"
        android:text="@string/ayudadepor"
        android:textColor="@color/ayuda"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textR" />


</android.support.constraint.ConstraintLayout>
